<%- include("partials/header.ejs") %>
<body>
    <%- include("partials/navbar.ejs") %>
    <hr>
    <div class="container">
        <h1><%= perguntas.titulo %></h1>
        <p><%= perguntas.descricao %></p>
        <hr>
        <form method="post" action="/salvarresposta">
            <h3>Ajude Com Seus Conhecimentos</h3>
            <label>Resposta: </label>
            <textarea placeholder="Digite Sua Resposta" name="corpo" class='form-control'></textarea><br>
            <input type="hidden" name="pergunta" value="<%= perguntas.id  %>">
            <button class="btn btn-success">Responder</button>
        </form>
        <hr>
        <% respostas.forEach(resposta => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <p><%= resposta.corpo %> <br></p>
                </div>
            </div>
        <% }) %>
    </div>
</body>
<%- include("partials/footer.ejs") %>